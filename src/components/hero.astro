---
import { Picture } from "astro:assets"
import heroImage from "assets/hero.png"
import Link from "@components/ui/link.astro"
import { Icon } from "astro-icon/components"
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24 gap-2">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
      class="rounded-lg shadow-lg"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Havade: Your Gateway to Diverse News Perspectives
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Bringing you alternative sources, multilingual perspectives, and AI-driven
      summaries for a complete news experience.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/waitlist"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-user-plus" />

        Join the Waitlist
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="mailto:hello@havade.tech"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxs-envelope" />
        Contact Us
      </Link>
    </div>
  </div>
</main>
